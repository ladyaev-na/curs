<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="curs.Views.Ass"
             Title="Ass">



    <ListView x:Name="AccessesListView">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout>
                        <Label Text="{Binding Date, StringFormat='Дата: {0:dd.MM.yyyy}'}" TextColor="Black"/>
                        <Label Text="{Binding StartChange, StringFormat='Начало: {0:hh\\:mm}'}" TextColor="Black"/>
                        <Label Text="{Binding EndChange, StringFormat='Конец: {0:hh\\:mm}'}" TextColor="Black"/>
                        <Label Text="{Binding Confirm, StringFormat='Подтверждено: {0}'}" TextColor="Black"/>
                        <Label></Label>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>


</ContentPage>