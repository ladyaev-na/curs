<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="curs.Views.BonusPage"
             Title="Детали бонуса">

    <!-- Градиентный фон -->
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#6A11CB" Offset="0.1"/>
            <GradientStop Color="#2575FC" Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <StackLayout Padding="50" Spacing="30" VerticalOptions="Center">

        <!-- Контейнер для деталей бонуса -->
        <Frame CornerRadius="25" Padding="20" BackgroundColor="White" HasShadow="True">
            <StackLayout Spacing="10">
                <!-- Название бонуса -->
                <Label x:Name="nameLabel"
                       FontAttributes="Bold"
                       FontSize="20"
                       HorizontalOptions="Center"
                       TextColor="Black"/>

                <!-- Описание бонуса -->
                <Label x:Name="descriptionLabel"
                       FontSize="16"
                       TextColor="Black"/>

                <!-- Цена бонуса -->
                <Label x:Name="priceLabel"
                       FontSize="16"
                       TextColor="Black"
                       HorizontalOptions="Center"/>
            </StackLayout>
        </Frame>
    </StackLayout>
</ContentPage>